        function placeOrder(cartid) {
            //    alert(addressId)
            //    alert(cartid)
            //    alert(index)
            //    alert(checkedOption)
            const code = document.getElementById("Code").value

            let paymentOption = document.querySelector('input[name="payment_option"]:checked').value
            // alert(paymentOption)
            const totalDis = document.getElementById("cartSubtotal").innerHTML

            $.ajax({
                url: "/checkOutData",
                method: "post",
                data: {
                    addressId,
                    cartid,
                    index,
                    paymentOption,
                    code,
                    totalDis

                },
                success: (response) => {
                    if (response.status === true) {
                        // alert("hi")
                        window.location.href = `/orderPlaced?id=${response.order.orderNumber}`

                    }
                    else if (response.status === "fill the options") {

                        Swal.fire({

                            icon: "error",
                            title: "Must fill the Options",
                            showConfirmButton: false,
                            timer: 1500
                        })

                    }
                    else if (response.status === "razorpay") {

                        let orderId = response.order.id;
                        let address = response.address
                        let amount = response.total
                        let couponCode = response.code
                        let order_num = response.orderNumber

                        // alert(orderId)
                        // alert(address)
                        // alert(amount)
                        // alert(couponCode)
                        // alert(order_num)
                        var options = {
                            "key": "rzp_test_lUdFfNwNjMAIHG",
                            "amount": response.order.amount,
                            "currency": "INR",
                            "name": "ChronoChic",
                            "description": "Test Transaction",
                            "image": "assets/images/logo/cc.png",
                            "order_id": response.order.id,
