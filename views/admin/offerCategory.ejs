<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function list(id, index) {

            const catId = id
            //  alert(catId)

            $.ajax({
                url: "/admin/cat-list",
                method: "post",
                data: {
                    catId
                },
                success: (response) => {
                    if (response.status === "unlist") {
                        // alert("unlist")
                        document.getElementById("edit" + index).style.display = "inline-block"
                        document.getElementById("listButton" + index).innerHTML = 'LIST'
                        document.getElementById('status' + index).innerHTML = 'UNLIST'

                    } else if (response.status == 'list') {
                        // alert("list")
                        document.getElementById("edit" + index).style.display = "none"
                        document.getElementById("listButton" + index).innerHTML = 'UNLIST'
                        document.getElementById('status' + index).innerHTML = 'LIST'
                    }
                }
            })


        }

        function deleteCatOffer(id) {
            // alert(id)

            Swal.fire({
                title: "Are you sure?",
                text: "You want to Delete this Offer?!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, Delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: "Deleted!",
                        text: "Your Offer has been deleted.",
                        icon: "success"
                    }).then((result) => {
                        $.ajax({
                            url: "/admin/deleteOffer",
                            method: "post",
                            data: {
                                id
                            },
                            success: (response) => {
                                if (response.status === true) {
                                    // alert("hello")
                                    location.href = "/admin/catagoryOffer"
                                    // window.addEventListener("load")
                                }
                            }
                        })
                    })
                }
            })
            // alert("hai")





        }




