    <script>
        function name() {
            const nameValue = document.getElementById("name").value
            const nameErr = document.getElementById("nameErr")

            if (nameValue.trim() == "") {
                nameErr.innerHTML = "Name is required"
            } else {
                nameErr.innerHTML = ""
            }

        }
        function endDate() {
            const endDate = document.getElementById("endDate").value;
            const startDate = document.getElementById("startDate").value;
            const endDateErr = document.getElementById("endDateErr");

            if (endDate.trim() === "") {
                endDateErr.innerHTML = "End date is required";
            } else if (endDate === startDate) {
                endDateErr.innerHTML = "End date cannot be the same as the start date";
            } else if (new Date(endDate) < new Date(startDate)) {
                endDateErr.innerHTML = "End date should be after the start date";
            } else {
                endDateErr.innerHTML = "";
            }
        }

        function startDate() {
            const today = new Date();
            const dd = String(today.getDate()).padStart(2, '0');
            const mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
            const yyyy = today.getFullYear();

            const minDate = `${yyyy}-${mm}-${dd}`;
            document.getElementById("startDate").setAttribute("min", minDate);

            const startDate = document.getElementById("startDate").value;
            const startDateErr = document.getElementById("startDateErr");

            if (startDate.trim() === "") {
                startDateErr.innerHTML = "Start date is required";
            } else if (new Date(startDate) < new Date(minDate)) {
                startDateErr.innerHTML = "Start date should be the current date or a future date";
            } else {
                startDateErr.innerHTML = "";
            }
        }


        function maxCash() {
            const maximum = document.getElementById("maximum").value
            const maxAmountErr = document.getElementById("maxAmountErr")

            if (maximum.trim() == "") {
                maxAmountErr.innerHTML = "Maximum Amount is required"
            } else {
                maxAmountErr.innerHTML = ""
            }

        }
        function minCash() {
            const minimum = document.getElementById("Minimum").value;
            const maximum = document.getElementById("maximum").value;
            const minAmountErr = document.getElementById("minAmountErr");

            if (minimum.trim() === "") {
                minAmountErr.innerHTML = "Minimum amount is required";
            } else if (parseInt(minimum) < 0) {
                minAmountErr.innerHTML = "Minimum amount should not be negative";
            } else if (parseInt(minimum) >= parseInt(maximum)) {
                minAmountErr.innerHTML = "Minimum amount should be less than the maximum amount";
            } else {
                minAmountErr.innerHTML = "";
            }
        }
        function dis() {
            const discount = document.getElementById("discount").value;
            const disErr = document.getElementById("disErr");

            if (discount.trim() === "") {
                disErr.innerHTML = "Discount is required";
            } else if (parseInt(discount) < 5 || parseInt(discount) > 75) {
                disErr.innerHTML = "Discount percentage should be between 5% and 75%";
            } else {
                disErr.innerHTML = "";
            }
        }
    
        function publish() {
            name()
            endDate()
            maxCash()
            dis()
            startDate()
            minCash()
    
            const nameErr = document.getElementById("nameErr")
            const endDateErr = document.getElementById("endDateErr")
            const maxAmountErr = document.getElementById("maxAmountErr")
            const disErr = document.getElementById("disErr")
            const minAmountErr = document.getElementById("minAmountErr")
            const startDateErr = document.getElementById("startDateErr")
    
            if (nameErr.innerHTML || endDateErr.innerHTML || maxAmountErr.innerHTML || disErr.innerHTML || minAmountErr.innerHTML || startDateErr.innerHTML) {
                document.getElementById("filedErr").innerHTML = "Fill the Filed"
            } else {
                document.getElementById("filedErr").innerHTML = ""
                const id=document.getElementById("id").value
                const nameValue = document.getElementById("name").value
                const startDate = document.getElementById("startDate").value
                const Minimum = document.getElementById("Minimum").value
                const endDate = document.getElementById("endDate").value
                const maximum = document.getElementById("maximum").value
                const discount = document.getElementById("discount").value
    
                $.ajax({
                    url: "/admin/editCoupon",
                    method: "post",
                    data: {
                        nameValue,
                        endDate,
                        maximum,
                        discount,
                        startDate,
                        Minimum,
                        id
                    },
                    success: (response) => {
                        if (response.status == true) {
                            window.location.href = "/admin/coupon"
                        }
                    },
                    error: (xhr) => {
                        const nameExistsError = document.getElementById("nameExistsError");

                        if (xhr.status === 400) {
                            
                            nameExistsError.textContent = xhr.responseJSON.error;
                        } else {
                            
                            nameExistsError.textContent = "An error occurred";
                        }
                    }
                })
            }
    
        }
    
    
    
    </script>


